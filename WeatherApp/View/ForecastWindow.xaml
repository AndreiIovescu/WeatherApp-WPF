                           Foreground="#f4f4f8"
                           FontSize="18"
                           Margin="20,0"/>
                <TextBlock Text="{Binding Day.HasPrecipitation, Converter={StaticResource precipitationConverter}}"
                           Foreground="#f4f4f8"
